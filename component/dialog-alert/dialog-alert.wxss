.alert-dialog-container {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 99;
    top: 0;
    left: 0;
}

.alert-dialog-container .overlay {
    position: fixed;
    width: 100%;
    height: 100%;
    opacity: 0;
    background-color: rgba(0, 0, 0, 0.6);
}

.alert-dialog-container .body {
    width: 540rpx;
    min-height: 288rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #F8F8F8;
    border-radius: 28rpx;
}

.alert-dialog-container .body .panel {
    width: 100%;
    min-height: 200rpx;
    border-bottom: 1rpx solid #CFCFCF;
}

.alert-dialog-container .body .panel .title {
    font-size: 34rpx;
    color: #000000;
    text-align: center;
    line-height: 110rpx;
}

.alert-dialog-container .body .panel .content {
    font-size: 26rpx;
    color: #262626;
    text-align: center;
    padding: 0 32rpx 32rpx;
}

.alert-dialog-container .body .sheet {
    height: 88rpx;
}

.alert-dialog-container .body .sheet button {
    display: inline-block;
    text-align: center;
    line-height: 88rpx;
    width: 269rpx;
    font-size: 34rpx;
    color: #426BF2;
    border-width: 0;
    border-radius: 0;
    padding: 0;
    margin: 0;
    background-color: transparent;
    height: 88rpx;
}

.alert-dialog-container .body .sheet .cancel {
    border-right: 1rpx solid #CFCFCF;
    background-color: transparent;
    border-bottom-left-radius: 28rpx;
}

.alert-dialog-container .body .sheet .confirm {
    background-color: transparent;
    border-bottom-right-radius: 28rpx;
}

.alert-dialog-container .body .sheet .single {
    width: 100%;
    border-bottom-left-radius: 28rpx;
    border-bottom-right-radius: 28rpx;
}

.alert-dialog-container .body .sheet .cancel-hover {
    background-color: #F3F4F6;
}

.alert-dialog-container .body .sheet .confirm-hover {
    background-color: #F3F4F6;
}

.alert-dialog-anim-in {
    animation-name: alert-dialog-in;
    animation-duration: 0.25s;
    animation-delay: 0s;
    animation-timing-function: ease-in-out;
    animation-fill-mode: forwards;
}

@keyframes alert-dialog-in {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.alert-dialog-anim-out {
    animation-name: alert-dialog-out;
    animation-duration: 0.25s;
    animation-delay: 0s;
    animation-timing-function: ease-in-out;
    animation-fill-mode: forwards;
}

@keyframes alert-dialog-out {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

.overlay-anim-in {
    animation-name: overlay-in;
    animation-duration: 0.25s;
    animation-delay: 0s;
    animation-timing-function: ease-in-out;
    animation-fill-mode: forwards;
}

@keyframes overlay-in {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.overlay-anim-out {
    animation-name: overlay-out;
    animation-duration: 0.25s;
    animation-delay: 0s;
    animation-timing-function: ease-in-out;
    animation-fill-mode: forwards;
}

@keyframes overlay-out {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}